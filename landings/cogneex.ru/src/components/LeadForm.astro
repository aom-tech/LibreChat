<section id="lead-form" class="section lead-form">
  <div class="container">
    <div class="form-wrapper">
      <div class="form-header">
        <h2 class="form-title">Начните использовать AI уже сегодня</h2>
        <p class="form-subtitle">Оставьте заявку и получите бесплатный доступ на 7 дней</p>
      </div>
      
      <form id="leadForm" class="form">
        <div class="form-tabs">
          <button type="button" class="tab-btn active" data-type="b2c">Для себя</button>
          <button type="button" class="tab-btn" data-type="b2b"><span class="tab-text">Для компании</span></button>
        </div>
        
        <!-- B2C форма -->
        <div class="form-content" data-form="b2c">
          <div class="form-group">
            <label for="email-b2c">Email *</label>
            <input type="email" id="email-b2c" name="email" required placeholder="your@email.com">
          </div>
          
          <div class="form-group">
            <label for="goal">Цель использования</label>
            <select id="goal" name="goal">
              <option value="">Выберите цель</option>
              <option value="courses">Создание курсов</option>
              <option value="content">Генерация контента</option>
              <option value="development">Разработка</option>
              <option value="research">Исследования</option>
              <option value="other">Другое</option>
            </select>
          </div>
        </div>
        
        <!-- B2B форма -->
        <div class="form-content hidden" data-form="b2b">
          <div class="form-row">
            <div class="form-group">
              <label for="name">Имя *</label>
              <input type="text" id="name" name="name" placeholder="Иван Иванов">
            </div>
            
            <div class="form-group">
              <label for="company">Компания *</label>
              <input type="text" id="company" name="company" placeholder="ООО Компания">
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="role">Должность</label>
              <input type="text" id="role" name="role" placeholder="CEO">
            </div>
            
            <div class="form-group">
              <label for="email-b2b">Email *</label>
              <input type="email" id="email-b2b" name="email" placeholder="your@company.com">
            </div>
          </div>
          
          <div class="form-group">
            <label for="phone">Телефон</label>
            <input type="tel" id="phone" name="phone" placeholder="+7 (999) 123-45-67">
          </div>
          
          <div class="form-group">
            <label for="interest">Интересует</label>
            <select id="interest" name="interest">
              <option value="demo">Демонстрация платформы</option>
              <option value="enterprise">Enterprise решение</option>
              <option value="course_box">Коробочное решение для курсов</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="comment">Комментарий</label>
            <textarea id="comment" name="comment" rows="3" placeholder="Расскажите о ваших задачах"></textarea>
          </div>
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" name="consent" required>
            <span>Согласен с <a href="/legal/privacy" target="_blank">политикой конфиденциальности</a> и на обработку персональных данных</span>
          </label>
        </div>
        
        <!-- Honeypot для защиты от ботов -->
        <input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
        
        <button type="submit" class="btn btn-primary btn-block btn-large">
          <span class="btn-text">Отправить заявку</span>
          <span class="btn-loader hidden">Отправка...</span>
        </button>
        
        <div class="form-message hidden"></div>
      </form>
    </div>
  </div>
</section>

<style>
  .lead-form {
    background: linear-gradient(180deg, #f9fafb 0%, var(--white) 100%);
  }

  .form-wrapper {
    max-width: 600px;
    margin: 0 auto;
    background: var(--white);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
  }

  .form-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .form-title {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .form-subtitle {
    color: var(--gray);
    font-size: 1.125rem;
  }

  .form-tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .tab-btn {
    flex: 1;
    padding: 0.75rem;
    background: transparent;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    font-weight: 600;
    color: var(--gray);
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }
  
  .tab-text {
    display: inline-block;
  }
  
  @media (max-width: 480px) {
    .tab-btn {
      padding: 0.75rem 0.5rem;
      font-size: 0.875rem;
    }
  }

  .tab-btn.active {
    background: var(--primary);
    border-color: var(--primary);
    color: var(--white);
  }

  .form-content.hidden {
    display: none;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  @media (max-width: 767px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .form-group input.error,
  .form-group select.error,
  .form-group textarea.error {
    border-color: #ef4444;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--gray);
  }

  .checkbox-label input[type="checkbox"] {
    margin-top: 0.25rem;
    width: auto;
  }

  .checkbox-label a {
    color: var(--primary);
    text-decoration: underline;
  }

  .btn-large {
    padding: 1rem;
    font-size: 1.125rem;
  }

  .btn-loader {
    display: none;
  }

  .btn.loading .btn-text {
    display: none;
  }

  .btn.loading .btn-loader {
    display: inline-block;
  }

  .form-message {
    margin-top: 1rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
    text-align: center;
  }

  .form-message.success {
    background: #d1fae5;
    color: #065f46;
  }

  .form-message.error {
    background: #fee2e2;
    color: #991b1b;
  }
</style>

<script>
  // Динамическая загрузка SberCRM клиента
  async function loadSberCRMClient() {
    const { submitLeadToSberCRM, sendTelegramNotification } = await import('../lib/sbercrm-client.js');
    return { submitLeadToSberCRM, sendTelegramNotification };
  }

  // Initialize form handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('leadForm');
    const tabBtns = document.querySelectorAll('.tab-btn');
    const formContents = document.querySelectorAll('.form-content');
    const submitBtn = form?.querySelector('button[type="submit"]');
    const formMessage = form?.querySelector('.form-message');
    
    if (!form || !submitBtn || !formMessage) {
      console.error('Form elements not found');
      return;
    }
    
    // Tab switching
    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const type = btn.dataset.type;
        
        tabBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        formContents.forEach(content => {
          if (content.dataset.form === type) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
      });
    });
    
    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Check honeypot
      const honeypotInput = form.querySelector('input[name="website"]');
      if (honeypotInput?.value) {
        console.log('Bot detected');
        return;
      }
      
      // Show loading
      submitBtn.classList.add('loading');
      submitBtn.disabled = true;
      formMessage.classList.add('hidden');
      
      // Get form type
      const activeTab = document.querySelector('.tab-btn.active');
      const formType = activeTab?.dataset.type || 'b2c';
      
      // Collect data
      const formData = new FormData(form);
      const data = {
        type: formType,
        consent: formData.get('consent') === 'on',
        source: window.location.href,
        userAgent: navigator.userAgent,
      };
      
      // Collect fields based on type
      if (formType === 'b2c') {
        data.email = formData.get('email');
        data.goal = formData.get('goal');
        data.interest = data.goal;
      } else {
        data.name = formData.get('name');
        data.company = formData.get('company');
        data.role = formData.get('role');
        data.email = formData.get('email');
        data.phone = formData.get('phone');
        data.interest = formData.get('interest');
        data.comment = formData.get('comment');
        data.needs = data.comment;
      }
      
      // Add UTM parameters if present
      const urlParams = new URLSearchParams(window.location.search);
      ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'].forEach(param => {
        const value = urlParams.get(param);
        if (value) data[param] = value;
      });
      
      try {
        // Загружаем SberCRM клиент
        const { submitLeadToSberCRM, sendTelegramNotification } = await loadSberCRMClient();
        
        // Отправляем лид в SberCRM
        const result = await submitLeadToSberCRM(data);
        console.log('Лид успешно создан в SberCRM:', result);
        
        // Получаем ID созданного лида
        const leadId = result._embedded?.leads?.[0]?.id;
        
        // Отправляем уведомление в Telegram (не блокируем при ошибке)
        sendTelegramNotification(data, leadId).catch(console.error);
        
        // Успех - редирект на страницу успеха
        window.location.href = '/success';
      } catch (error) {
        console.error('Ошибка при отправке заявки:', error);
        formMessage.textContent = 'Произошла ошибка при отправке заявки. Попробуйте позже или свяжитесь с нами напрямую.';
        formMessage.classList.remove('hidden', 'success');
        formMessage.classList.add('error');
        
        submitBtn.classList.remove('loading');
        submitBtn.disabled = false;
      }
    });
  });
</script>